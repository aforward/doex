#!/bin/bash

doex droplets.create mp \
  --region tor1 \
  --tags marketplace \
  --image ubuntu-18-04-x64 \
  --size s-1vcpu-1gb

doex block droplets --sleep 30 mp active && \
  doex scp mp ./bin/bootstrap /tmp/bootstrap && \
  doex ssh mp "/tmp/bootstrap"

IP=$(MIX=quiet doex ip mp)
echo "All done... to access the droplet run:"
echo "  ssh root@${IP}"

